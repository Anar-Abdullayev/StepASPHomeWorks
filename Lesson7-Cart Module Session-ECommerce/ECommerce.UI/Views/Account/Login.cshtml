@using ECommerce.Entities.Concrete.Enums
@model LoginViewModel

@{
    Layout = "_LoginRegisterLayout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h3 class="text-center">Login</h3>
        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="@Model.ReturnUrl"/>
            <div class="mb-3">
                <label asp-for="@Model.Username" class="form-label">Username</label>
                <input type="text" class="form-control" asp-for="@Model.Username">
                <span asp-validation-for="@Model.Username"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="@Model.Password">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" asp-for="@Model.RememberMe">
                <label class="form-check-label" asp-for="@Model.RememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <div class="text-center mt-3">
            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" asp-route-isAdmin="@Model.IsAdmin">Register</a></p>
        </div>
    </div>
</div>