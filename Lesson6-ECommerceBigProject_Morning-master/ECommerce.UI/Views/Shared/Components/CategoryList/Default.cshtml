@model CategoryListViewModel

<section class="list-group">
    <a href="/product/index?category=0" class="list-group-item @(Model.CurrentCategory == 0 ? " active" : "")">All products</a>
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <a href="/product/index?category=@item.CategoryId" class="@css" style="cursor:pointer">@item.CategoryName</a>
    }
</section>